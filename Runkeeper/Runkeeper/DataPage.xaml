<Page
    x:Class="Runkeeper.DataPage"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Runkeeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Green">
        <Charting:Chart x:Name="TimeChart" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="630">
            <Charting:LineSeries Background="White" Title="SmartPhone" Margin="0,0,-132,0" IndependentValuePath="Name" DependentValuePath="Amount" IsSelectionEnabled="True"/>
        </Charting:Chart>
        <Button Name="Ref" Click="Ref_Click" Width="100" Height="50" Content="refresh" VerticalAlignment="Top" HorizontalAlignment="Center"/>
    </Grid>
</Page>
